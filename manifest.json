{
  "name": "00Trickle Extension",
  "version": "0.2",
  "description": "A word-replacement extension which injects vocabulary into your internet pages.",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "options_page": "options.html",
  "background": {
    "scripts": ["thirdparty/jquery.js","background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["thirdparty/jquery.js","content.js"],
            "run_at": "document_end"
        }
    ],
	"web_accessible_resources": ["data/re.json"],
  "manifest_version": 2
}
